# Azure AD Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env file to source control

# Azure AD Tenant Configuration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Gateway Configuration
SERVER_PORT=8080

# Backend Service URLs
BACKEND_SPRING_BOOT_URL=http://localhost:8081
BACKEND_LEGACY_SPRING_URL=http://localhost:8082
BACKEND_GWT_URL=http://localhost:8083

# Redis Configuration (optional - for distributed sessions)
# SPRING_REDIS_HOST=localhost
# SPRING_REDIS_PORT=6379
# SPRING_SESSION_STORE_TYPE=redis
